<style>
    form span {
        width: 100px;
    }
</style>

<div class="row my-5 justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Login</h1>
        <form name="frm" class="card p-3">
            <div class="input-group mb-3">
                <span class="input-group-text">이메일</span>
                <input name="email" type="text" class="form-control" value="blue@test.com">
            </div>
            <div class="input-group">
                <span class="input-group-text">비밀번호</span>
                <input name="password" type="password" class="form-control" value="12341234">
            </div>
            <button class="btn btn-primary mt-3">Login</button>
        </form>
        <div class="text-end mt-2">
            <a href="/users/join">회원가입</a>
        </div>
    </div>
</div>

<script type="module">
    // import
    import { app } from '/javascripts/firebase.js';
    import { getAuth, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.4.0/firebase-auth.js";
    const auth = getAuth(app);

    $(frm).on('submit', function(e){
        e.preventDefault();

        // 유효성 체크
        const email = $(frm.email).val();
        const pass = $(frm.password).val();

        if(email == ""){
            alert("이메일을 입력해 주세요.");
            $(frm.email).focus();
        } else if(pass == ""){
            alert("비밀번호를 입력하세요.");
            $(frm.password).focus();
        } else {
            // 로그인
            // alert(email + pass);
            signInWithEmailAndPassword(auth, email, pass).then(success => {
                console.log(success);
                alert('login success');
                sessionStorage.setItem("email",email);
                sessionStorage.setItem("uid",success.user.uid);
                location.href='/';
            }).catch(error => {
                console.log(error);
                alert(error.message);
            });
        }
    });

</script>